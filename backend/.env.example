# =============================================================================
# BET_HOPE ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in the values

# =============================================================================
# DJANGO SETTINGS
# =============================================================================
DJANGO_SECRET_KEY=your-super-secret-key-change-in-production
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# Environment: development, staging, production
DJANGO_ENV=development

# =============================================================================
# DATABASE
# =============================================================================
# PostgreSQL connection
DATABASE_URL=postgres://bet_hope:your_password@localhost:5432/bet_hope

# Or individual settings
# DB_NAME=bet_hope
# DB_USER=bet_hope
# DB_PASSWORD=your_password
# DB_HOST=localhost
# DB_PORT=5432

# =============================================================================
# REDIS / CELERY
# =============================================================================
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# =============================================================================
# FOOTBALL DATA APIs
# =============================================================================

# Football-Data.org (RECOMMENDED - for fixtures and results)
# Get your FREE key at: https://www.football-data.org/client/register
# Free tier: 10 requests/minute (~14,400/day), covers major European leagues
FOOTBALL_DATA_ORG_KEY=your_football_data_org_key

# API-Football (Alternative - for real-time fixtures and results)
# Get your FREE key at: https://dashboard.api-football.com/register
# Free tier: 100 requests/day, covers all major leagues worldwide
API_FOOTBALL_KEY=your_api_football_key

# Football-Data.co.uk is used for historical CSV data (no API key needed)

# =============================================================================
# AI / ML SERVICES
# =============================================================================

# OpenAI (for embeddings and recommendations)
OPENAI_API_KEY=your_openai_api_key

# Anthropic (Claude - alternative AI provider)
ANTHROPIC_API_KEY=your_anthropic_api_key

# Google (Gemini - alternative AI provider)
GOOGLE_API_KEY=your_google_api_key

# Default AI provider: openai, anthropic, or google
DEFAULT_AI_PROVIDER=openai

# HuggingFace (for local embeddings - optional)
HUGGINGFACE_TOKEN=your_huggingface_token

# Sentence Transformers model (for local embeddings)
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# =============================================================================
# ML MODEL SETTINGS
# =============================================================================
ML_ARTIFACTS_DIR=ml/artifacts
ML_MODEL_VERSION=latest

# Training settings
ML_TRAIN_SEASONS=3
ML_TEST_SIZE=0.2
ML_RETRAIN_HOUR=4

# =============================================================================
# VECTOR DATABASE
# =============================================================================
# Using pgvector (PostgreSQL extension)
# Or configure Qdrant:
# QDRANT_HOST=localhost
# QDRANT_PORT=6333
# QDRANT_API_KEY=

# =============================================================================
# CORS SETTINGS
# =============================================================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# =============================================================================
# JWT SETTINGS
# =============================================================================
JWT_ACCESS_TOKEN_LIFETIME_MINUTES=60
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_REQUESTS_PER_HOUR=1000
RATE_LIMIT_REQUESTS_PER_DAY=10000

# =============================================================================
# ERROR TRACKING
# =============================================================================
# Sentry DSN (optional)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# =============================================================================
# EMAIL (optional)
# =============================================================================
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=

# =============================================================================
# STORAGE (production)
# =============================================================================
# AWS S3 (optional)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_STORAGE_BUCKET_NAME=
# AWS_S3_REGION_NAME=us-east-1

# =============================================================================
# ADMIN
# =============================================================================
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@bet-hope.com
DJANGO_SUPERUSER_PASSWORD=change_this_password

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_DOCUMENT_AI=True
ENABLE_LIVE_PREDICTIONS=True
ENABLE_WEBHOOKS=False

# =============================================================================
# DATA SYNC SCHEDULE (cron expressions)
# =============================================================================
SYNC_LIVE_MATCHES_INTERVAL=15  # minutes
SYNC_FIXTURES_INTERVAL=6       # hours
SYNC_HISTORICAL_HOUR=3         # hour of day (UTC)
MODEL_RETRAIN_HOUR=4           # hour of day (UTC)
